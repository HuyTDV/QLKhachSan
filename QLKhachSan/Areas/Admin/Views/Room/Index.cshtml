@model IEnumerable<QLKhachSan.Models.Room>

@{
    ViewData["Title"] = "Quản lý phòng";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý phòng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách phòng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách phòng</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Thêm phòng mới
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <input type="text" id="searchBox" class="form-control" placeholder="Tìm kiếm theo số phòng, loại phòng...">
                    </div>
                    <div class="col-md-3">
                        <select id="statusFilter" class="form-control">
                            <option value="">-- Tất cả trạng thái --</option>
                            <option value="Available">Available</option>
                            <option value="Booked">Booked</option>
                            <option value="Maintenance">Maintenance</option>
                            <option value="Cleaning">Cleaning</option>
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="roomTable">
                        <thead>
                            <tr>
                                <th>Số phòng</th>
                                <th>Loại phòng</th>
                                <th>Chi nhánh</th>
                                <th>Sức chứa</th>
                                <th>Giá (VNĐ)</th>
                                <th>Tiện nghi</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var room in Model)
                            {
                                <tr>
                                    <td><strong>@room.RoomNumber</strong></td>
                                    <td>@room.RoomType</td>
                                    <td>@(room.Branch?.BranchName ?? "N/A")</td>
                                    <td>@room.Capacity người</td>
                                    <td>@room.Price?.ToString("N0") ₫</td>
                                    <td>@room.Amenities</td>
                                    <td>
                                        @if (room.Status == "Available")
                                        {
                                            <span class="badge badge-success">Trống</span>
                                        }
                                        else if (room.Status == "Booked")
                                        {
                                            <span class="badge badge-danger">Đã đặt</span>
                                        }
                                        else if (room.Status == "Maintenance")
                                        {
                                            <span class="badge badge-warning">Bảo trì</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-info">@room.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@room.RoomId" class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@room.RoomId" class="btn btn-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@room.RoomId" class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchBox').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#roomTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Status filter
            $('#statusFilter').on('change', function() {
                var value = $(this).val();
                if (value === '') {
                    $('#roomTable tbody tr').show();
                } else {
                    $('#roomTable tbody tr').hide();
                    $('#roomTable tbody tr').filter(function() {
                        return $(this).find('td:eq(6)').text().indexOf(value) > -1;
                    }).show();
                }
            });

            // Auto hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 3000);
        });
    </script>
}