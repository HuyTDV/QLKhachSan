@model IEnumerable<QLKhachSan.Models.Room>
@using QLKhachSan.Models
@{
    ViewData["Title"] = "Quản lý Phòng";
    var branches = ViewBag.Branches as List<HotelBranch> ?? new List<HotelBranch>();
    
    // Pagination variables
    var currentPage = ViewBag.CurrentPage ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalItems = ViewBag.TotalItems ?? 0;
    var totalPages = ViewBag.TotalPages ?? 1;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Phòng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách phòng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- FILTER CARD -->
        <div class="card card-outline card-primary mb-3">
            <div class="card-body p-2">
                <form method="get" asp-action="Index" asp-controller="Room" asp-area="Admin" class="form-inline">
                    <div class="form-group mr-2">
                        <label class="mr-2">Chi nhánh:</label>
                        <select name="branchId" class="form-control form-control-sm" style="width: 200px;">
                            <option value="">-- Tất cả chi nhánh --</option>
                            @foreach (var branch in branches)
                            {
                                <option value="@branch.BranchId" selected="@(ViewBag.BranchId == branch.BranchId)">@branch.BranchName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mr-2">
                        <label class="mr-2">Trạng thái:</label>
                        <select name="status" class="form-control form-control-sm" style="width: 150px;">
                            <option value="">-- Tất cả --</option>
                            <option value="Available" selected="@(ViewBag.Status == "Available")">Phòng trống</option>
                            <option value="Booked" selected="@(ViewBag.Status == "Booked")">Đã đặt</option>
                            <option value="Maintenance" selected="@(ViewBag.Status == "Maintenance")">Bảo trì</option>
                            <option value="Cleaning" selected="@(ViewBag.Status == "Cleaning")">Đang dọn</option>
                        </select>
                    </div>
                    <div class="form-group mr-2">
                        <label class="mr-2">Loại phòng:</label>
                        <input type="text" name="roomType" class="form-control form-control-sm" placeholder="Vd: Deluxe..." value="@ViewBag.RoomType" style="width: 150px;" />
                    </div>
                    <div class="form-group mr-2">
                        <label class="mr-2">Tìm kiếm:</label>
                        <input type="text" name="searchTerm" class="form-control form-control-sm" placeholder="Số phòng, tiện nghi..." value="@ViewBag.SearchTerm" style="width: 200px;" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm mr-2"><i class="fas fa-search"></i> Lọc</button>
                    <a href="@Url.Action("Index", "Room")" class="btn btn-secondary btn-sm"><i class="fas fa-redo"></i> Reset</a>
                </form>
            </div>
        </div>

        <!-- DANH SÁCH PHÒNG -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-door-open"></i> Danh sách Phòng
                    <span class="badge badge-info ml-2">Trang @currentPage/@totalPages</span>
                </h3>
                <div class="card-tools">
                    <span class="badge badge-primary mr-2">Tổng: @totalItems phòng</span>
                    <a asp-action="Create" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Thêm phòng mới</a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }

                @if (ViewBag.BranchId != null || !string.IsNullOrEmpty(ViewBag.Status) || !string.IsNullOrEmpty(ViewBag.RoomType) || !string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> <strong>Đang lọc:</strong>
                        @if (ViewBag.BranchId != null)
                        {
                            var selectedBranch = branches.FirstOrDefault(b => b.BranchId == (int)ViewBag.BranchId);
                            if (selectedBranch != null)
                            {
                                <span class="badge badge-secondary">Chi nhánh: @selectedBranch.BranchName</span>
                            }
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.Status))
                        {
                            <span class="badge badge-secondary">Trạng thái: @ViewBag.Status</span>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.RoomType))
                        {
                            <span class="badge badge-secondary">Loại: @ViewBag.RoomType</span>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                        {
                            <span class="badge badge-secondary">Từ khóa: @ViewBag.SearchTerm</span>
                        }
                    </div>
                }

                <!-- TOOLBAR PHÂN TRANG TRÊN BẢNG -->
                <div class="row mb-3">
                    <div class="col-sm-12 col-md-6">
                        <div class="d-flex align-items-center">
                            <label class="mb-0 mr-2">Hiển thị:</label>
                            <form method="get" asp-action="Index" id="pageSizeForm">
                                <input type="hidden" name="branchId" value="@ViewBag.BranchId" />
                                <input type="hidden" name="status" value="@ViewBag.Status" />
                                <input type="hidden" name="roomType" value="@ViewBag.RoomType" />
                                <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />
                                <select name="pageSize" class="form-control form-control-sm" style="width: 80px;" onchange="this.form.submit()">
                                    <option value="10" selected="@(pageSize == 10)">10</option>
                                    <option value="25" selected="@(pageSize == 25)">25</option>
                                    <option value="50" selected="@(pageSize == 50)">50</option>
                                    <option value="100" selected="@(pageSize == 100)">100</option>
                                </select>
                            </form>
                            <span class="ml-2 text-muted">
                                Hiển thị @((currentPage - 1) * pageSize + 1) - @(Math.Min(currentPage * pageSize, totalItems)) / @totalItems
                            </span>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Số phòng</th>
                                <th>Loại phòng</th>
                                <th>Chi nhánh</th>
                                <th>Sức chứa</th>
                                <th>Giá/đêm</th>
                                <th>Tiện nghi</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var room in Model)
                                {
                                    <tr>
                                        <td><strong>Phòng @room.RoomNumber</strong></td>
                                        <td>@room.RoomType</td>
                                        <td>@(room.Branch?.BranchName ?? "N/A")</td>
                                        <td><i class="fas fa-user"></i> @room.Capacity người</td>
                                        <td><strong>@(room.Price?.ToString("N0") ?? "0") ₫</strong></td>
                                        <td>@room.Amenities</td>
                                        <td>
                                            @if (room.Status == "Available")
                                            {
                                                <span class="badge badge-success">Phòng trống</span>
                                            }
                                            else if (room.Status == "Booked")
                                            {
                                                <span class="badge badge-danger">Đã đặt</span>
                                            }
                                            else if (room.Status == "Maintenance")
                                            {
                                                <span class="badge badge-warning">Bảo trì</span>
                                            }
                                            else if (room.Status == "Cleaning")
                                            {
                                                <span class="badge badge-info">Đang dọn</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@room.Status</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@room.RoomId" class="btn btn-info btn-sm" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                                <a asp-action="Edit" asp-route-id="@room.RoomId" class="btn btn-warning btn-sm" title="Sửa"><i class="fas fa-edit"></i></a>
                                                <a asp-action="Delete" asp-route-id="@room.RoomId" class="btn btn-danger btn-sm" title="Xóa"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                        <p class="mb-0">Không tìm thấy phòng nào</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- PAGINATION CONTROLS -->
                @if (totalItems > 0)
                {
                    <div class="row mt-3">
                        <div class="col-12 d-flex justify-content-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <!-- First Page Button -->
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            pageNumber = 1, 
                                            pageSize = pageSize,
                                            branchId = ViewBag.BranchId, 
                                            status = ViewBag.Status, 
                                            roomType = ViewBag.RoomType, 
                                            searchTerm = ViewBag.SearchTerm 
                                        })" aria-label="First">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>

                                    <!-- Previous Page Button -->
                                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            pageNumber = currentPage - 1, 
                                            pageSize = pageSize,
                                            branchId = ViewBag.BranchId, 
                                            status = ViewBag.Status, 
                                            roomType = ViewBag.RoomType, 
                                            searchTerm = ViewBag.SearchTerm 
                                        })" aria-label="Previous">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    <!-- Page Numbers -->
                                    @{
                                        var startPage = Math.Max(1, currentPage - 2);
                                        var endPage = Math.Min(totalPages, currentPage + 2);

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == currentPage ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("Index", new { 
                                                    pageNumber = i, 
                                                    pageSize = pageSize,
                                                    branchId = ViewBag.BranchId, 
                                                    status = ViewBag.Status, 
                                                    roomType = ViewBag.RoomType, 
                                                    searchTerm = ViewBag.SearchTerm 
                                                })">
                                                    @i
                                                </a>
                                            </li>
                                        }
                                    }

                                    <!-- Next Page Button -->
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            pageNumber = currentPage + 1, 
                                            pageSize = pageSize,
                                            branchId = ViewBag.BranchId, 
                                            status = ViewBag.Status, 
                                            roomType = ViewBag.RoomType, 
                                            searchTerm = ViewBag.SearchTerm 
                                        })" aria-label="Next">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>

                                    <!-- Last Page Button -->
                                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            pageNumber = totalPages, 
                                            pageSize = pageSize,
                                            branchId = ViewBag.BranchId, 
                                            status = ViewBag.Status, 
                                            roomType = ViewBag.RoomType, 
                                            searchTerm = ViewBag.SearchTerm 
                                        })" aria-label="Last">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        setTimeout(function() { $('.alert-success').fadeOut('slow'); }, 3000);
    </script>
}