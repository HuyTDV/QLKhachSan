@model IEnumerable<QLKhachSan.Models.Service>

@{
    ViewData["Title"] = "Quản lý Dịch vụ";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Danh sách Dịch vụ</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="card card-outline card-primary">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-concierge-bell text-primary"></i>
                                            <strong>@item.ServiceName</strong>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-muted mb-3">@item.Description</p>
                                        <h4 class="text-success mb-3">
                                            <i class="fas fa-money-bill-wave"></i>
                                            @item.Price?.ToString("N0") VNĐ
                                        </h4>
                                        <div class="btn-group btn-block">
                                            <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Xóa
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            Chưa có dịch vụ nào. <a asp-action="Create">Thêm dịch vụ đầu tiên</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>