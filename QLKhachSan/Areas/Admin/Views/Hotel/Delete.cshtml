@model QLKhachSan.Models.Hotel

@{
    ViewData["Title"] = "Xóa Khách sạn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Xác nhận xóa Khách sạn</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Bạn có chắc chắn muốn xóa khách sạn này?</h4>
                    <p class="text-muted">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo:</strong> Xóa khách sạn sẽ ảnh hưởng đến tất cả chi nhánh và phòng liên quan!
                    </p>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.HotelId</dd>

                        <dt class="col-sm-3">Tên khách sạn</dt>
                        <dd class="col-sm-9"><strong>@Model.HotelName</strong></dd>

                        <dt class="col-sm-3">Đánh giá</dt>
                        <dd class="col-sm-9">
                            @if (Model.Rating.HasValue)
                            {
                                <span class="badge badge-warning">
                                    <i class="fas fa-star"></i> @Model.Rating.Value
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Hotline</dt>
                        <dd class="col-sm-9">@Model.Hotline</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Ngày tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="HotelId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>