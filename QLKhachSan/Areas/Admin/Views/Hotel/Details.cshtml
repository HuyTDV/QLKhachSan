@model QLKhachSan.Models.Hotel

@{
    ViewData["Title"] = "Chi tiết Khách sạn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Chi tiết Khách sạn</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.HotelId</dd>

                        <dt class="col-sm-3">Tên khách sạn</dt>
                        <dd class="col-sm-9"><h4>@Model.HotelName</h4></dd>

                        <dt class="col-sm-3">Đánh giá</dt>
                        <dd class="col-sm-9">
                            @if (Model.Rating.HasValue)
                            {
                                <span class="badge badge-warning" style="font-size: 1.2em;">
                                    <i class="fas fa-star"></i> @Model.Rating.Value / 5.0
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa có đánh giá</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">
                            <p>@Model.Description</p>
                        </dd>

                        <dt class="col-sm-3">Hotline</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-phone"></i> @Model.Hotline
                        </dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            <i class="fas fa-envelope"></i> @Model.Email
                        </dd>

                        <dt class="col-sm-3">Ngày tạo</dt>
                        <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <hr />

                    <h5 class="mb-3">
                        <i class="fas fa-building"></i> Danh sách Chi nhánh
                        <span class="badge badge-info">@Model.HotelBranches.Count</span>
                    </h5>

                    @if (Model.HotelBranches.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Tên chi nhánh</th>
                                        <th>Địa chỉ</th>
                                        <th>Thành phố</th>
                                        <th>Quốc gia</th>
                                        <th>Điện thoại</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var branch in Model.HotelBranches)
                                    {
                                        <tr>
                                            <td>@branch.BranchName</td>
                                            <td>@branch.Address</td>
                                            <td>@branch.City</td>
                                            <td>@branch.Country</td>
                                            <td>@branch.Phone</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Chưa có chi nhánh nào.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.HotelId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.HotelId" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>