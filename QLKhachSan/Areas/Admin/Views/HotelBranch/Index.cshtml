@model IEnumerable<QLKhachSan.Models.HotelBranch>

@{
    ViewData["Title"] = "Quản lý Chi nhánh";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Danh sách Chi nhánh</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Khách sạn</th>
                                    <th>Tên chi nhánh</th>
                                    <th>Địa chỉ</th>
                                    <th>Thành phố</th>
                                    <th>Quốc gia</th>
                                    <th>Quản lý</th>
                                    <th>Điện thoại</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BranchId</td>
                                        <td>
                                            <span class="badge badge-primary">@item.Hotel?.HotelName</span>
                                        </td>
                                        <td><strong>@item.BranchName</strong></td>
                                        <td>@item.Address</td>
                                        <td>@item.City</td>
                                        <td>@item.Country</td>
                                        <td>@item.Manager?.FullName</td>
                                        <td>
                                            <i class="fas fa-phone"></i> @item.Phone
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.BranchId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.BranchId" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BranchId" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>