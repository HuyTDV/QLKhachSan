@model IEnumerable<QLKhachSan.Models.HotelBranch>

@{
    ViewData["Title"] = "Quản lý Chi nhánh";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý Chi nhánh</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "Admin" })">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi nhánh</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <!-- Quick Stats -->
        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 id="totalCount">@Model.Count()</h3>
                        <p>Tổng chi nhánh</p>
                    </div>
                    <div class="icon"><i class="fas fa-building"></i></div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.Select(b => b.City).Distinct().Count()</h3>
                        <p>Thành phố</p>
                    </div>
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.Select(b => b.Country).Distinct().Count()</h3>
                        <p>Quốc gia</p>
                    </div>
                    <div class="icon"><i class="fas fa-globe"></i></div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.Select(b => b.Hotel?.HotelName).Distinct().Count()</h3>
                        <p>Khách sạn</p>
                    </div>
                    <div class="icon"><i class="fas fa-hotel"></i></div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-list"></i> Danh sách chi nhánh</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Thêm mới
                    </a>
                </div>
            </div>
            <div class="card-body">
                <!-- Advanced Filters -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label><i class="fas fa-search"></i> Tìm kiếm</label>
                        <input type="text" id="searchBox" class="form-control" placeholder="Tên chi nhánh, địa chỉ, điện thoại...">
                    </div>
                    <div class="col-md-3">
                        <label><i class="fas fa-building"></i> Khách sạn</label>
                        <select id="hotelFilter" class="form-control">
                            <option value="">Tất cả</option>
                            @foreach (var hotel in Model.Select(b => b.Hotel?.HotelName).Distinct().Where(h => h != null))
                            {
                                <option value="@hotel">@hotel</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label><i class="fas fa-city"></i> Thành phố</label>
                        <select id="cityFilter" class="form-control">
                            <option value="">Tất cả</option>
                            @foreach (var city in Model.Select(b => b.City).Distinct().Where(c => c != null))
                            {
                                <option value="@city">@city</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label><i class="fas fa-globe"></i> Quốc gia</label>
                        <select id="countryFilter" class="form-control">
                            <option value="">Tất cả</option>
                            @foreach (var country in Model.Select(b => b.Country).Distinct().Where(c => c != null))
                            {
                                <option value="@country">@country</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-striped" id="branchTable">
                        <thead class="bg-light">
                            <tr>
                                <th>ID</th>
                                <th>Khách sạn</th>
                                <th>Tên chi nhánh</th>
                                <th>Địa chỉ</th>
                                <th>Thành phố</th>
                                <th>Quốc gia</th>
                                <th>Quản lý</th>
                                <th>Điện thoại</th>
                                <th style="width: 120px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-hotel="@(item.Hotel?.HotelName ?? "")" data-city="@item.City" data-country="@item.Country">
                                    <td><strong class="text-muted">#@item.BranchId</strong></td>
                                    <td>
                                        <span class="badge badge-primary" style="font-size: 12px; padding: 6px 10px;">
                                            <i class="fas fa-hotel"></i> @(item.Hotel?.HotelName ?? "N/A")
                                        </span>
                                    </td>
                                    <td><strong class="text-primary">@item.BranchName</strong></td>
                                    <td>
                                        <i class="fas fa-map-marker-alt text-muted"></i>
                                        <small>@item.Address</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">
                                            <i class="fas fa-city"></i> @item.City
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">
                                            <i class="fas fa-flag"></i> @item.Country
                                        </span>
                                    </td>
                                    <td>
                                        <i class="fas fa-user-tie text-success"></i>
                                        <small>@(item.Manager?.FullName ?? "Chưa có")</small>
                                    </td>
                                    <td>
                                        <i class="fas fa-phone text-primary"></i>
                                        <small>@item.Phone</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.BranchId"
                                               class="btn btn-info"
                                               data-toggle="tooltip"
                                               title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.BranchId"
                                               class="btn btn-warning"
                                               data-toggle="tooltip"
                                               title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.BranchId"
                                               class="btn btn-danger"
                                               data-toggle="tooltip"
                                               title="Xóa chi nhánh">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 text-muted">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        Hiển thị <strong id="visibleCount">@Model.Count()</strong> / @Model.Count() chi nhánh
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Combined filter function
            function applyFilters() {
                var searchValue = $('#searchBox').val().toLowerCase();
                var hotel = $('#hotelFilter').val();
                var city = $('#cityFilter').val();
                var country = $('#countryFilter').val();

                var visibleCount = 0;

                $('#branchTable tbody tr').each(function() {
                    var $row = $(this);
                    var text = $row.text().toLowerCase();
                    var rowHotel = $row.data('hotel');
                    var rowCity = $row.data('city');
                    var rowCountry = $row.data('country');
                    var show = true;

                    // Search filter
                    if (searchValue && text.indexOf(searchValue) === -1) {
                        show = false;
                    }

                    // Hotel filter
                    if (hotel && rowHotel !== hotel) {
                        show = false;
                    }

                    // City filter
                    if (city && rowCity !== city) {
                        show = false;
                    }

                    // Country filter
                    if (country && rowCountry !== country) {
                        show = false;
                    }

                    $row.toggle(show);
                    if (show) visibleCount++;
                });

                $('#visibleCount').text(visibleCount);
            }

            // Attach filter events
            $('#searchBox, #hotelFilter, #cityFilter, #countryFilter').on('keyup change', applyFilters);

            // Auto hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 3000);
        });
    </script>
}