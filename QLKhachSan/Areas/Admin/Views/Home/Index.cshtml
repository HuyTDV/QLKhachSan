@{
    ViewData["Title"] = "Tổng quan";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tổng quan</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tổng quan</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.TotalRooms</h3>
                        <p>Tổng số phòng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <a href="@Url.Action("Index", "Room")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.AvailableRooms</h3>
                        <p>Phòng trống</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <a href="@Url.Action("Index", "Room")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.BookedRooms</h3>
                        <p>Phòng đã đặt</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <a href="@Url.Action("Index", "Booking")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.MonthlyRevenue.ToString("N0")<sup style="font-size: 20px">₫</sup></h3>
                        <p>Doanh thu tháng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <a href="@Url.Action("Index", "Payment")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Second row -->
        <div class="row">
            <!-- Recent Bookings -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-calendar-alt"></i> Đặt phòng gần đây
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-primary">@ViewBag.MonthlyBookings booking trong tháng</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Mã booking</th>
                                    <th>Khách hàng</th>
                                    <th>Phòng</th>
                                    <th>Check-in</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
                                {
                                    foreach (var booking in ViewBag.RecentBookings)
                                    {
                                        <tr>
                                            <td>#@booking.BookingId</td>
                                            <td>@(booking.User?.FullName ?? "N/A")</td>
                                            <td>Phòng @(booking.Room?.RoomNumber ?? "N/A")</td>
                                            <td>@booking.CheckIn?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (booking.Status == "Confirmed")
                                                {
                                                    <span class="badge badge-success">Đã xác nhận</span>
                                                }
                                                else if (booking.Status == "Pending")
                                                {
                                                    <span class="badge badge-warning">Chờ xác nhận</span>
                                                }
                                                else if (booking.Status == "Checked-in")
                                                {
                                                    <span class="badge badge-info">Đang ở</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@booking.Status</span>
                                                }
                                            </td>
                                            <td>@booking.TotalPrice?.ToString("N0") ₫</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Chưa có booking nào</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-sm btn-primary">
                            Xem tất cả booking
                        </a>
                    </div>
                </div>
            </div>

            <!-- Maintenance -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-tools"></i> Phòng cần bảo trì
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (ViewBag.MaintenanceNeeded != null && ViewBag.MaintenanceNeeded.Count > 0)
                            {
                                foreach (var maintenance in ViewBag.MaintenanceNeeded)
                                {
                                    <li class="list-group-item">
                                        <strong>Phòng @(maintenance.Room?.RoomNumber ?? "N/A")</strong>
                                        <br>
                                        <small class="text-muted">@maintenance.Description</small>
                                        <br>
                                        @if (maintenance.Status == "In Progress")
                                        {
                                            <span class="badge badge-warning">Đang bảo trì</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Chờ xử lý</span>
                                        }
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-center text-muted">
                                    Không có phòng cần bảo trì
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Index", "RoomMaintenance")" class="btn btn-sm btn-warning">
                            Xem tất cả
                        </a>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-bolt"></i> Thao tác nhanh
                        </h3>
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("Create", "Room")" class="btn btn-primary btn-block">
                            <i class="fas fa-plus"></i> Thêm phòng mới
                        </a>
                        <a href="@Url.Action("Create", "Booking")" class="btn btn-success btn-block">
                            <i class="fas fa-calendar-plus"></i> Đặt phòng mới
                        </a>
                        <a href="@Url.Action("Index", "User")" class="btn btn-info btn-block">
                            <i class="fas fa-users"></i> Quản lý khách hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Welcome Card -->
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-info-circle"></i> Chào mừng đến với hệ thống quản lý Khách sạn Grandora
                        </h3>
                    </div>
                    <div class="card-body">
                        <p>Sử dụng menu bên trái để điều hướng qua các chức năng quản lý khách sạn.</p>
                        <ul>
                            <li><strong>Quản lý phòng:</strong> Thêm, sửa, xóa phòng và theo dõi trạng thái</li>
                            <li><strong>Đặt phòng:</strong> Quản lý booking từ khách hàng</li>
                            <li><strong>Khách hàng:</strong> Quản lý thông tin và đánh giá</li>
                            <li><strong>Dịch vụ:</strong> Quản lý các dịch vụ bổ sung</li>
                            <li><strong>Tài chính:</strong> Theo dõi thanh toán và doanh thu</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>