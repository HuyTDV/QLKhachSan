@model QLKhachSan.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Tổng quan";
    var selectedMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    var selectedYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tổng quan</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tổng quan</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="card card-primary card-outline mb-3">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-filter"></i> Chọn tháng xem doanh thu
                </h3>
            </div>
            <div class="card-body">
                <form method="get" action="@Url.Action("Index", "Home", new { area = "Admin" })" class="form-inline">
                    <div class="form-group mr-3">
                        <label for="month" class="mr-2">Tháng:</label>
                        <select name="month" id="month" class="form-control">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(i == selectedMonth)">Tháng @i</option>
                            }
                        </select>
                    </div>

                    <div class="form-group mr-3">
                        <label for="year" class="mr-2">Năm:</label>
                        <select name="year" id="year" class="form-control">
                            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                            {
                                <option value="@y" selected="@(y == selectedYear)">@y</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Xem báo cáo
                    </button>

                    <a href="@Url.Action("Index", "Home", new { area = "Admin" })" class="btn btn-secondary ml-2">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </form>

                <div class="mt-3">
                    <span class="badge badge-info" style="font-size: 14px; padding: 8px 12px;">
                        <i class="fas fa-calendar-alt"></i> Đang xem: Tháng @selectedMonth/@selectedYear
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.TotalRooms</h3>
                        <p>Tổng số phòng</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <a href="@Url.Action("Index", "Room")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.AvailableRooms</h3>
                        <p>Phòng trống</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-door-open"></i>
                    </div>
                    <a href="@Url.Action("Index", "Room")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.BookedRooms</h3>
                        <p>Phòng đã đặt</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <a href="@Url.Action("Index", "Booking")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.MonthlyRevenue.ToString("N0")<sup style="font-size: 20px">₫</sup></h3>
                        <p>Doanh thu tháng @selectedMonth/@selectedYear</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <a href="@Url.Action("Index", "Payment")" class="small-box-footer">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-8">
                <div class="card card-primary card-outline h-100">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-line"></i> Biểu đồ doanh thu tháng @selectedMonth
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="chart">
                            <canvas id="revenueChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-success card-outline h-100">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-pie"></i> Tỷ lệ phòng
                        </h3>
                    </div>
                    <div class="card-body">
                        <canvas id="statusChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- ĐÃ SỬA: 2 Card bằng nhau tuyệt đối -->
        <div class="row" style="display: flex; flex-wrap: wrap;">
            <div class="col-md-8" style="display: flex;">
                <div class="card" style="width: 100%;">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-calendar-alt"></i> Đặt phòng gần đây
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-primary">@ViewBag.MonthlyBookings booking tháng @selectedMonth</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Mã booking</th>
                                    <th>Khách hàng</th>
                                    <th>Phòng</th>
                                    <th>Check-in</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.RecentBookings != null && ViewBag.RecentBookings.Count > 0)
                                {
                                    foreach (var booking in ViewBag.RecentBookings)
                                    {
                                        <tr>
                                            <td>#@booking.BookingId</td>
                                            <td>@(booking.User?.FullName ?? "N/A")</td>
                                            <td>Phòng @(booking.Room?.RoomNumber ?? "N/A")</td>
                                            <td>@booking.CheckIn?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (booking.Status == "Confirmed")
                                                {
                                                    <span class="badge badge-success">Đã xác nhận</span>
                                                }
                                                else if (booking.Status == "Pending")
                                                {
                                                    <span class="badge badge-warning">Chờ xác nhận</span>
                                                }
                                                else if (booking.Status == "Checked-in")
                                                {
                                                    <span class="badge badge-info">Đang ở</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@booking.Status</span>
                                                }
                                            </td>
                                            <td>@booking.TotalPrice?.ToString("N0") ₫</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-3">Chưa có booking nào</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Index", "Booking")" class="btn btn-sm btn-primary">
                            Xem tất cả booking
                        </a>
                    </div>
                </div>
            </div>

            <!-- Card phòng bảo trì - Bằng chiều cao với booking -->
            <div class="col-md-4" style="display: flex;">
                <div class="card" style="width: 100%;">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-tools"></i> Phòng cần bảo trì
                        </h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (ViewBag.MaintenanceNeeded != null && ViewBag.MaintenanceNeeded.Count > 0)
                            {
                                foreach (var maintenance in ViewBag.MaintenanceNeeded)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <strong>Phòng @(maintenance.Room?.RoomNumber ?? "N/A")</strong>
                                                <br>
                                                <small class="text-muted">@maintenance.Description</small>
                                            </div>
                                            <div>
                                                @if (maintenance.Status == "In Progress")
                                                {
                                                    <span class="badge badge-warning">Đang bảo trì</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Chờ xử lý</span>
                                                }
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-center text-muted">
                                    Không có phòng cần bảo trì
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Index", "RoomMaintenance")" class="btn btn-sm btn-warning">
                            Xem tất cả
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        // --- 1. Biểu đồ Doanh thu ---
        var ctxRevenue = document.getElementById('revenueChart').getContext('2d');
        var revenueData = {
            // Lấy dữ liệu từ Model
            labels: @Html.Raw(Json.Serialize(Model.RevenueLabels)),
            datasets: [{
                label: 'Doanh thu (VNĐ)',
                backgroundColor: 'rgba(60,141,188,0.9)',
                borderColor: 'rgba(60,141,188,0.8)',
                pointRadius: false,
                pointColor: '#3b8bba',
                pointStrokeColor: 'rgba(60,141,188,1)',
                pointHighlightFill: '#fff',
                pointHighlightStroke: 'rgba(60,141,188,1)',
                data: @Html.Raw(Json.Serialize(Model.RevenueValues))
            }]
        };

        new Chart(ctxRevenue, {
            type: 'bar',
            data: revenueData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) { return value.toLocaleString('vi-VN') + ' ₫'; }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) { return context.raw.toLocaleString('vi-VN') + ' ₫'; }
                        }
                    }
                }
            }
        });

        // --- 2. Biểu đồ Tròn (Trạng thái phòng) ---
        var ctxStatus = document.getElementById('statusChart').getContext('2d');
        new Chart(ctxStatus, {
            type: 'doughnut',
            data: {
                labels: ['Trống', 'Đã đặt/Đang ở', 'Bảo trì'],
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.RoomStatusCounts)),
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545'],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    });
</script>