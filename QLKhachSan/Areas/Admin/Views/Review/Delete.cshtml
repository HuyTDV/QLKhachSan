@model QLKhachSan.Models.Review

@{
    ViewData["Title"] = "Xóa Đánh giá";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Xác nhận xóa Đánh giá</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Bạn có chắc chắn muốn xóa đánh giá này?</h4>
                    <p class="text-muted">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác!
                    </p>
                    <hr />

                    <!-- Thông tin đánh giá -->
                    <div class="card card-outline card-warning mb-3">
                        <div class="card-header">
                            <h5 class="card-title">Thông tin đánh giá</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">ID</dt>
                                <dd class="col-sm-9">@Model.ReviewId</dd>

                                <dt class="col-sm-3">Khách hàng</dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-user"></i>
                                    <strong>@Model.User?.FullName</strong>
                                    <br />
                                    <small class="text-muted">@Model.User?.Email</small>
                                </dd>

                                <dt class="col-sm-3">Phòng</dt>
                                <dd class="col-sm-9">
                                    <span class="badge badge-secondary" style="font-size: 1em;">
                                        Phòng @Model.Room?.RoomNumber
                                    </span>
                                    <br />
                                    <small class="text-muted">@Model.Room?.RoomType</small>
                                </dd>

                                <dt class="col-sm-3">Đánh giá</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Rating.HasValue)
                                    {
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Model.Rating.Value)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                        <strong class="ml-2">@Model.Rating / 5</strong>
                                    }
                                </dd>

                                <dt class="col-sm-3">Nhận xét</dt>
                                <dd class="col-sm-9">
                                    <div class="bg-light p-2 rounded">
                                        @Model.Comment
                                    </div>
                                </dd>

                                <dt class="col-sm-3">Phản hồi</dt>
                                <dd class="col-sm-9">
                                    @if (string.IsNullOrEmpty(Model.Reply))
                                    {
                                        <span class="badge badge-danger">Chưa phản hồi</span>
                                    }
                                    else
                                    {
                                        <div class="bg-light p-2 rounded border-left border-success" style="border-left-width: 3px !important;">
                                            @Model.Reply
                                        </div>
                                    }
                                </dd>

                                <dt class="col-sm-3">Ngày tạo</dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-calendar"></i>
                                    @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ReviewId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa đánh giá
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>