@model QLKhachSan.Models.User

@{
    ViewData["Title"] = "Xóa người dùng";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Xóa người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Người dùng</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle"></i>
                            Xác nhận xóa người dùng
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger">
                            <h5><i class="icon fas fa-ban"></i> Cảnh báo quan trọng!</h5>
                            Bạn có chắc chắn muốn xóa người dùng này? Tất cả dữ liệu liên quan (booking, đánh giá...) sẽ bị ảnh hưởng. Hành động này không thể hoàn tác!
                        </div>

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <img src="~/images/avatars/@Model.Avatar" alt="Avatar" class="img-circle" width="100" height="100">
                            }
                            else
                            {
                                <i class="fas fa-user-circle fa-5x text-muted"></i>
                            }
                        </div>

                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">ID</th>
                                <td><strong>@Model.UserId</strong></td>
                            </tr>
                            <tr>
                                <th>Họ và tên</th>
                                <td><strong>@Model.FullName</strong></td>
                            </tr>
                            <tr>
                                <th>Username</th>
                                <td>@Model.Username</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Số điện thoại</th>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <th>Vai trò</th>
                                <td>
                                    @if (Model.Role == "Admin")
                                    {
                                        <span class="badge badge-danger">Admin</span>
                                    }
                                    else if (Model.Role == "Manager")
                                    {
                                        <span class="badge badge-warning">Manager</span>
                                    }
                                    else if (Model.Role == "Staff")
                                    {
                                        <span class="badge badge-info">Staff</span>
                                    }
                                    else if (Model.Role == "Customer")
                                    {
                                        <span class="badge badge-success">Customer</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Địa chỉ</th>
                                <td>@(Model.Address ?? "Chưa cập nhật")</td>
                            </tr>
                            <tr>
                                <th>Ngày tạo</th>
                                <td>@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        </table>

                        @if (Model.Role == "Admin")
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="icon fas fa-exclamation-triangle"></i>
                                <strong>Lưu ý:</strong> Đây là tài khoản Admin. Việc xóa tài khoản này có thể ảnh hưởng đến hệ thống!
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="UserId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy bỏ
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>