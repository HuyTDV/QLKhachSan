@model QLKhachSan.Areas.Admin.Controllers.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-user-edit"></i> Chỉnh sửa người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Người dùng</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-edit"></i> Cập nhật thông tin: <strong>@Model.Username</strong></h3>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Username" />

                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="alert alert-info">
                                <h5><i class="fas fa-info-circle"></i> Thông tin cố định:</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>User ID:</strong> #@Model.UserId
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Username:</strong> <code>@Model.Username</code> (Không thể thay đổi)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FullName" class="required">Họ và tên</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            </div>
                                            <input asp-for="FullName" class="form-control" />
                                        </div>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" class="required">Email</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                            </div>
                                            <input asp-for="Email" type="email" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Phone">Số điện thoại</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            </div>
                                            <input asp-for="Phone" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Role" class="required">Vai trò</label>
                                        <select asp-for="Role" class="form-control">
                                            <option value="Admin">👑 Admin - Quản trị viên</option>
                                            <option value="Manager">💼 Manager - Quản lý</option>
                                            <option value="Staff">⚙️ Staff - Nhân viên</option>
                                            <option value="Customer">👤 Customer - Khách hàng</option>
                                        </select>
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">Địa chỉ</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    </div>
                                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Avatar">Avatar (tên file)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                                    </div>
                                    <input asp-for="Avatar" type="text" class="form-control" placeholder="avatar.jpg" />
                                </div>
                                <span asp-validation-for="Avatar" class="text-danger"></span>

                                @if (!string.IsNullOrEmpty(Model.Avatar))
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">
                                            <i class="fas fa-image"></i> Avatar hiện tại:
                                            <strong>@Model.Avatar</strong>
                                        </small>
                                        <div class="mt-1">
                                            <img src="~/assets/img/avatars/@Model.Avatar"
                                                 alt="Current Avatar"
                                                 class="img-thumbnail"
                                                 style="max-width: 150px; max-height: 150px;"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                            <div style="display:none;" class="text-danger">
                                                <i class="fas fa-exclamation-triangle"></i> File không tồn tại
                                            </div>
                                        </div>
                                    </div>
                                }
                                <small class="form-text text-muted">
                                    <i class="fas fa-lightbulb"></i>
                                    Để trống nếu không muốn thay đổi. File cần upload vào <code>~/assets/img/avatars/</code>
                                </small>
                            </div>

                            <hr class="my-4">

                            <h5 class="mb-3"><i class="fas fa-key"></i> Thay đổi mật khẩu (tùy chọn)</h5>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="NewPassword">Mật khẩu mới</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            </div>
                                            <input asp-for="NewPassword" type="password" class="form-control"
                                                   placeholder="Để trống nếu không đổi mật khẩu" id="newPassword" />
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPassword', 'toggleIcon2')">
                                                    <i class="fas fa-eye" id="toggleIcon2"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        <div class="progress mt-1" style="height: 5px; display: none;" id="strengthProgress">
                                            <div id="passwordStrength" class="progress-bar" role="progressbar" style="width: 0%"></div>
                                        </div>
                                        <small class="form-text text-muted">
                                            <i class="fas fa-shield-alt"></i>
                                            Tối thiểu 6 ký tự. Để trống nếu không muốn thay đổi mật khẩu
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="callout callout-warning">
                                <h5><i class="fas fa-exclamation-triangle"></i> Chú ý:</h5>
                                <ul class="mb-0">
                                    <li>Username không thể thay đổi sau khi tạo</li>
                                    <li>Email phải là duy nhất trong hệ thống</li>
                                    <li>Mật khẩu mới (nếu có) sẽ được mã hóa SHA256</li>
                                    <li>Để trống ô "Mật khẩu mới" nếu không muốn đổi password</li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-default">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <a href="@Url.Action("Details", new { id = Model.UserId })" class="btn btn-info">
                                <i class="fas fa-eye"></i> Xem chi tiết
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Toggle hiển thị password
        function togglePassword(fieldId, iconId) {
            var field = document.getElementById(fieldId);
            var icon = document.getElementById(iconId);

            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Kiểm tra độ mạnh mật khẩu
        $('#newPassword').on('input', function() {
            var password = $(this).val();
            var progressBar = $('#passwordStrength');
            var strengthProgress = $('#strengthProgress');

            if (password.length === 0) {
                strengthProgress.hide();
                return;
            }

            strengthProgress.show();
            var strength = 0;

            if (password.length >= 6) strength += 25;
            if (password.length >= 10) strength += 25;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength += 25;
            if (/\d/.test(password) && /\W/.test(password)) strength += 25;

            progressBar.css('width', strength + '%');

            if (strength < 50) {
                progressBar.removeClass('bg-warning bg-success').addClass('bg-danger');
            } else if (strength < 75) {
                progressBar.removeClass('bg-danger bg-success').addClass('bg-warning');
            } else {
                progressBar.removeClass('bg-danger bg-warning').addClass('bg-success');
            }
        });
    </script>
}

<style>
    .required:after {
        content: " *";
        color: red;
        font-weight: bold;
    }

    code {
        color: #e83e8c;
        background: #f8f9fa;
        padding: 2px 6px;
        border-radius: 3px;
    }
</style>