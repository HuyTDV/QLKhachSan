@model IEnumerable<QLKhachSan.Areas.Admin.Controllers.UserViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
    var currentSearch = ViewData["CurrentSearch"]?.ToString() ?? "";
    var roleFilter = ViewData["RoleFilter"]?.ToString() ?? "";
    var pageSize = (int)(ViewData["PageSize"] ?? 10);
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var totalItems = (int)(ViewData["TotalItems"] ?? 0);
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-users"></i> Quản lý người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Người dùng</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-list"></i> Danh sách người dùng</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    </div>
                }

                <!-- Toolbar -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="btn-group float-left">
                            <a asp-action="Create" class="btn btn-success">
                                <i class="fas fa-user-plus"></i> Thêm mới
                            </a>
                            <button type="button" class="btn btn-info" onclick="exportUsers()">
                                <i class="fas fa-file-export"></i> Export CSV
                            </button>
                            <button type="button" class="btn btn-danger" id="btnBulkDelete">
                                <i class="fas fa-trash-alt"></i> Xóa đã chọn
                            </button>
                        </div>
                        <div class="float-right">
                            <span class="badge badge-primary p-2" style="font-size: 14px;">
                                <i class="fas fa-database"></i> Tổng: <strong>@totalItems</strong> người dùng
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Bộ lọc và tìm kiếm -->
                <div class="row mb-3">
                    <div class="col-lg-5 col-md-6 mb-2">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <input type="text" id="searchInput" class="form-control" placeholder="Tìm theo tên, username, email, phone..." value="@currentSearch">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button" onclick="search()">
                                    Tìm kiếm
                                </button>
                                @if (!string.IsNullOrEmpty(currentSearch) || !string.IsNullOrEmpty(roleFilter))
                                {
                                    <button class="btn btn-secondary" type="button" onclick="clearFilter()">
                                        <i class="fas fa-times"></i> Xóa lọc
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-2">
                        <select id="roleFilter" class="form-control" onchange="search()">
                            <option value="">-- Tất cả vai trò --</option>
                            <option value="Admin" selected="@(roleFilter == "Admin")">👑 Admin</option>
                            <option value="Manager" selected="@(roleFilter == "Manager")">💼 Manager</option>
                            <option value="Staff" selected="@(roleFilter == "Staff")">⚙️ Staff</option>
                            <option value="Customer" selected="@(roleFilter == "Customer")">👤 Customer</option>
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6 mb-2">
                        <select id="pageSize" class="form-control" onchange="changePageSize()">
                            <option value="5" selected="@(pageSize == 5)">5 / trang</option>
                            <option value="10" selected="@(pageSize == 10)">10 / trang</option>
                            <option value="20" selected="@(pageSize == 20)">20 / trang</option>
                            <option value="50" selected="@(pageSize == 50)">50 / trang</option>
                            <option value="100" selected="@(pageSize == 100)">100 / trang</option>
                        </select>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th width="30" class="text-center">
                                    <input type="checkbox" id="selectAll" title="Chọn tất cả">
                                </th>
                                <th width="40" class="text-center">ID</th>
                                <th width="60" class="text-center">Avatar</th>
                                <th>Họ tên</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th width="110" class="text-center">Vai trò</th>
                                <th width="100" class="text-center">Thống kê</th>
                                <th width="100" class="text-center">Ngày tạo</th>
                                <th width="160" class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" class="user-checkbox" value="@user.UserId">
                                        </td>
                                        <td class="text-center"><strong>#@user.UserId</strong></td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(user.Avatar))
                                            {
                                                <img src="~/assets/img/avatars/@user.Avatar"
                                                     alt="@user.FullName"
                                                     class="img-circle elevation-2"
                                                     style="width: 40px; height: 40px; object-fit: cover;"
                                                     onerror="this.onerror=null; this.src='/assets/img/default-avatar.png';">
                                            }
                                            else
                                            {
                                                <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                            }
                                        </td>
                                        <td>
                                            <strong>@user.FullName</strong>
                                        </td>
                                        <td>
                                            <code>@user.Username</code>
                                        </td>
                                        <td>
                                            <i class="fas fa-envelope text-primary"></i> @user.Email
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.Phone))
                                            {
                                                <i class="fas fa-phone text-success"></i>
                                                <span>@user.Phone</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (user.Role == "Admin")
                                            {
                                                <span class="badge badge-danger badge-lg">
                                                    <i class="fas fa-crown"></i> Admin
                                                </span>
                                            }
                                            else if (user.Role == "Manager")
                                            {
                                                <span class="badge badge-warning badge-lg">
                                                    <i class="fas fa-user-tie"></i> Manager
                                                </span>
                                            }
                                            else if (user.Role == "Staff")
                                            {
                                                <span class="badge badge-info badge-lg">
                                                    <i class="fas fa-user-cog"></i> Staff
                                                </span>
                                            }
                                            else if (user.Role == "Customer")
                                            {
                                                <span class="badge badge-success badge-lg">
                                                    <i class="fas fa-user"></i> Customer
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary badge-lg">@user.Role</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <small>
                                                <div class="mb-1">
                                                    <i class="fas fa-calendar-check text-primary"></i>
                                                    <strong>@user.BookingCount</strong>
                                                </div>
                                                <div>
                                                    <i class="fas fa-star text-warning"></i>
                                                    <strong>@user.ReviewCount</strong>
                                                </div>
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <small>
                                                <i class="far fa-calendar-alt"></i>
                                                @user.CreatedAt?.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@user.UserId" 
                                                   class="btn btn-info" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@user.UserId" 
                                                   class="btn btn-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-secondary" 
                                                        onclick="resetPassword(@user.UserId)" 
                                                        title="Reset mật khẩu">
                                                    <i class="fas fa-key"></i>
                                                </button>
                                                <button type="button" class="btn btn-danger" 
                                                        onclick="confirmDelete(@user.UserId, '@user.Username')" 
                                                        title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center text-muted">
                                        <div class="py-5">
                                            <i class="fas fa-users fa-4x mb-3 text-secondary"></i>
                                            <h5>Không tìm thấy người dùng nào</h5>
                                            <p class="text-muted">
                                                @if (!string.IsNullOrEmpty(currentSearch))
                                                {
                                                    <span>Không có kết quả cho "<strong>@currentSearch</strong>"</span>
                                                }
                                                else
                                                {
                                                    <span>Chưa có người dùng nào trong hệ thống</span>
                                                }
                                            </p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Phân trang -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center mb-0">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="#" onclick="changePage(1); return false;" title="Trang đầu">
                                    <i class="fas fa-angle-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="#" onclick="changePage(@(currentPage - 1)); return false;" title="Trang trước">
                                    <i class="fas fa-angle-left"></i> Trước
                                </a>
                            </li>

                            @{
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, currentPage + 2);
                                
                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="changePage(1); return false;">1</a>
                                    </li>
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                }

                                for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" href="#" onclick="changePage(@i); return false;">@i</a>
                                    </li>
                                }

                                if (endPage < totalPages)
                                {
                                    if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="changePage(@totalPages); return false;">@totalPages</a>
                                    </li>
                                }
                            }

                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="#" onclick="changePage(@(currentPage + 1)); return false;" title="Trang sau">
                                    Sau <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="#" onclick="changePage(@totalPages); return false;" title="Trang cuối">
                                    <i class="fas fa-angle-double-right"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="text-center mt-2">
                            <small class="text-muted">
                                Trang <strong>@currentPage</strong> / <strong>@totalPages</strong> 
                                (Hiển thị @((currentPage - 1) * pageSize + 1) - @Math.Min(currentPage * pageSize, totalItems) trong tổng số @totalItems)
                            </small>
                        </div>
                    </nav>
                }
            </div>
        </div>
    </div>
</section>

<!-- Token cho AJAX -->
<form id="tokenForm" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        // Tìm kiếm
        function search() {
            var searchString = $('#searchInput').val().trim();
            var roleFilter = $('#roleFilter').val();
            var pageSize = $('#pageSize').val();
            window.location.href = '@Url.Action("Index")?searchString=' + encodeURIComponent(searchString) + '&roleFilter=' + roleFilter + '&pageSize=' + pageSize;
        }

        // Xóa bộ lọc
        function clearFilter() {
            $('#searchInput').val('');
            $('#roleFilter').val('');
            search();
        }

        // Enter để tìm kiếm
        $('#searchInput').keypress(function(e) {
            if (e.which == 13) {
                search();
                return false;
            }
        });

        // Đổi số bản ghi mỗi trang
        function changePageSize() {
            search();
        }

        // Chuyển trang
        function changePage(page) {
            var searchString = $('#searchInput').val().trim();
            var roleFilter = $('#roleFilter').val();
            var pageSize = $('#pageSize').val();
            window.location.href = '@Url.Action("Index")?page=' + page + '&searchString=' + encodeURIComponent(searchString) + '&roleFilter=' + roleFilter + '&pageSize=' + pageSize;
        }

        // Chọn tất cả
        $('#selectAll').change(function() {
            $('.user-checkbox').prop('checked', $(this).prop('checked'));
        });

        // Reset Password
        function resetPassword(userId) {
            if (!confirm('Bạn có chắc muốn reset mật khẩu cho người dùng này?\n\nMật khẩu mới sẽ được tạo ngẫu nhiên và hiển thị 1 lần duy nhất!')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("ResetPassword")',
                type: 'POST',
                data: {
                    id: userId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert('✅ ' + response.message + '\n\n🔑 Mật khẩu mới: ' + response.newPassword + '\n\n⚠️ Vui lòng lưu lại và gửi cho người dùng!');
                    } else {
                        alert('❌ ' + response.message);
                    }
                },
                error: function() {
                    alert('❌ Có lỗi xảy ra! Vui lòng thử lại.');
                }
            });
        }

        // Xác nhận xóa
        function confirmDelete(userId, username) {
            if (confirm('⚠️ Bạn có chắc muốn xóa người dùng "' + username + '"?\n\nLưu ý: Không thể xóa nếu user có booking hoặc review!')) {
                window.location.href = '@Url.Action("Delete")/' + userId;
            }
        }

        // Xóa nhiều
        $('#btnBulkDelete').click(function() {
            var selectedIds = [];
            $('.user-checkbox:checked').each(function() {
                selectedIds.push($(this).val());
            });

            if (selectedIds.length === 0) {
                alert('⚠️ Vui lòng chọn ít nhất một người dùng để xóa!');
                return;
            }

            if (!confirm('⚠️ Bạn có chắc muốn xóa ' + selectedIds.length + ' người dùng đã chọn?\n\nLưu ý: Chỉ xóa được user không có booking/review!')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("BulkDelete")',
                type: 'POST',
                data: {
                    userIds: selectedIds,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert('✅ ' + response.message);
                        location.reload();
                    } else {
                        alert('❌ ' + response.message);
                    }
                },
                error: function() {
                    alert('❌ Có lỗi xảy ra! Vui lòng thử lại.');
                }
            });
        });

        // Export
        function exportUsers() {
            var searchString = $('#searchInput').val().trim();
            var roleFilter = $('#roleFilter').val();
            window.location.href = '@Url.Action("Export")?searchString=' + encodeURIComponent(searchString) + '&roleFilter=' + roleFilter;
        }
    </script>
}

<style>
    .badge-lg {
        font-size: 12px;
        padding: 4px 8px;
    }
    .table td {
        vertical-align: middle !important;
    }
    .table th {
        vertical-align: middle !important;
    }
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    code {
        color: #007bff;
        background: #e9ecef;
        padding: 2px 6px;
        border-radius: 3px;
    }
</style>