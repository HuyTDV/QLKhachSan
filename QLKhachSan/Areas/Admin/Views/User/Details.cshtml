@model QLKhachSan.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Chi tiết người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Người dùng</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <!-- Profile Card -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <img class="profile-user-img img-fluid img-circle" src="~/assets/img/avatars/@Model.Avatar" alt="User profile picture">
                            }
                            else
                            {
                                <i class="fas fa-user-circle fa-5x text-muted"></i>
                            }
                        </div>

                        <h3 class="profile-username text-center">@Model.FullName</h3>

                        <p class="text-muted text-center">
                            @if (Model.Role == "Admin")
                            {
                                <span class="badge badge-danger badge-lg">Admin</span>
                            }
                            else if (Model.Role == "Manager")
                            {
                                <span class="badge badge-warning badge-lg">Manager</span>
                            }
                            else if (Model.Role == "Staff")
                            {
                                <span class="badge badge-info badge-lg">Staff</span>
                            }
                            else if (Model.Role == "Customer")
                            {
                                <span class="badge badge-success badge-lg">Customer</span>
                            }
                        </p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Tổng booking</b> <a class="float-right">@(Model.Bookings?.Count ?? 0)</a>
                            </li>
                            <li class="list-group-item">
                                <b>Đánh giá</b> <a class="float-right">@(Model.Reviews?.Count ?? 0)</a>
                            </li>
                            <li class="list-group-item">
                                <b>Ngày tham gia</b> <a class="float-right">@Model.CreatedAt?.ToString("dd/MM/yyyy")</a>
                            </li>
                        </ul>

                        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning btn-block">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger btn-block">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <!-- Thông tin chi tiết -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin cá nhân</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">ID</th>
                                <td>@Model.UserId</td>
                            </tr>
                            <tr>
                                <th>Họ và tên</th>
                                <td><strong>@Model.FullName</strong></td>
                            </tr>
                            <tr>
                                <th>Username</th>
                                <td>@Model.Username</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>
                                    <i class="fas fa-envelope"></i>
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </td>
                            </tr>
                            <tr>
                                <th>Số điện thoại</th>
                                <td>
                                    <i class="fas fa-phone"></i>
                                    @(Model.Phone ?? "Chưa cập nhật")
                                </td>
                            </tr>
                            <tr>
                                <th>Vai trò</th>
                                <td>@Model.Role</td>
                            </tr>
                            <tr>
                                <th>Địa chỉ</th>
                                <td>@(Model.Address ?? "Chưa cập nhật")</td>
                            </tr>
                            <tr>
                                <th>Ngày tạo</th>
                                <td>@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Booking history -->
                @if (Model.Bookings != null && Model.Bookings.Any())
                {
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Lịch sử đặt phòng</h3>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Mã booking</th>
                                        <th>Ngày</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.Bookings.OrderByDescending(b => b.CreatedAt).Take(5))
                                    {
                                        <tr>
                                            <td>#@booking.BookingId</td>
                                            <td>@booking.CreatedAt?.ToString("dd/MM/yyyy")</td>
                                            <td>@booking.TotalPrice?.ToString("N0") ₫</td>
                                            <td>
                                                @if (booking.Status == "Confirmed")
                                                {
                                                    <span class="badge badge-success">Đã xác nhận</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@booking.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }

                <!-- Reviews -->
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Đánh giá gần đây</h3>
                        </div>
                        <div class="card-body">
                            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt).Take(3))
                            {
                                <div class="mb-3">
                                    <strong>
                                        @for (int i = 0; i < review.Rating; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                    </strong>
                                    <small class="text-muted">@review.CreatedAt?.ToString("dd/MM/yyyy")</small>
                                    <p class="mb-0">@review.Comment</p>
                                    <hr>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</section>