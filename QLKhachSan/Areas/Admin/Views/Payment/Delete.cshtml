@model QLKhachSan.Models.Payment

@{
    ViewData["Title"] = "Xóa thanh toán";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Xóa thanh toán</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Thanh toán</a></li>
                    <li class="breadcrumb-item active">Xóa</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-exclamation-triangle"></i>
                            Xác nhận xóa thanh toán
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h5><i class="icon fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                            Bạn có chắc chắn muốn xóa giao dịch thanh toán này? Hành động này không thể hoàn tác và có thể ảnh hưởng đến dữ liệu tài chính.
                        </div>

                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">Mã thanh toán</th>
                                <td><strong>#@Model.PaymentId</strong></td>
                            </tr>
                            <tr>
                                <th>Booking</th>
                                <td>
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@Model.BookingId">
                                        #@Model.BookingId
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th>Khách hàng</th>
                                <td>
                                    <strong>@(Model.Booking?.User?.FullName ?? "N/A")</strong>
                                    @if (Model.Booking?.User != null)
                                    {
                                        <br>
                                        <small class="text-muted">@Model.Booking.User.Email</small>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Số tiền</th>
                                <td>
                                    <h4 class="text-success mb-0">
                                        @Model.Amount?.ToString("N0") ₫
                                    </h4>
                                </td>
                            </tr>
                            <tr>
                                <th>Phương thức</th>
                                <td>
                                    @if (Model.PaymentMethod == "Credit Card")
                                    {
                                        <span class="badge badge-primary">
                                            <i class="fas fa-credit-card"></i> Thẻ tín dụng
                                        </span>
                                    }
                                    else if (Model.PaymentMethod == "Cash")
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-money-bill"></i> Tiền mặt
                                        </span>
                                    }
                                    else if (Model.PaymentMethod == "Bank Transfer")
                                    {
                                        <span class="badge badge-info">
                                            <i class="fas fa-university"></i> Chuyển khoản
                                        </span>
                                    }
                                    else if (Model.PaymentMethod == "E-wallet")
                                    {
                                        <span class="badge badge-warning">
                                            <i class="fas fa-wallet"></i> Ví điện tử
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@Model.PaymentMethod</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Mã giao dịch</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.TransactionCode))
                                    {
                                        <code>@Model.TransactionCode</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Ngày thanh toán</th>
                                <td>@Model.PaidAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <th>Ghi chú</th>
                                <td>@(Model.Notes ?? "Không có")</td>
                            </tr>
                        </table>

                        <div class="alert alert-danger mt-3">
                            <i class="icon fas fa-ban"></i>
                            <strong>Lưu ý:</strong> Việc xóa giao dịch này có thể ảnh hưởng đến báo cáo tài chính và lịch sử thanh toán!
                        </div>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="PaymentId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xác nhận xóa
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy bỏ
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>