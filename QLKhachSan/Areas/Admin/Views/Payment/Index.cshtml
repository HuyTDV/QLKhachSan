@model IEnumerable<QLKhachSan.Models.Payment>

@{
    ViewData["Title"] = "Quản lý thanh toán";
    var totalAmount = Model?.Sum(p => p.Amount ?? 0) ?? 0;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý thanh toán</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Thanh toán</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Stats -->
        <div class="row mb-3">
            <div class="col-md-3">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@totalAmount.ToString("N0")<sup style="font-size: 20px">₫</sup></h3>
                        <p>Tổng doanh thu</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@(Model?.Count() ?? 0)</h3>
                        <p>Số giao dịch</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-receipt"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách thanh toán</h3>
                <div class="card-tools">
                    <a asp-action="Create" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Thêm thanh toán
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        @TempData["Success"]
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Mã thanh toán</th>
                                <th>Booking</th>
                                <th>Khách hàng</th>
                                <th>Số tiền</th>
                                <th>Phương thức</th>
                                <th>Mã giao dịch</th>
                                <th>Ngày thanh toán</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var payment in Model)
                                {
                                    <tr>
                                        <td><strong>#@payment.PaymentId</strong></td>
                                        <td>
                                            <a asp-controller="Booking" asp-action="Details" asp-route-id="@payment.BookingId">
                                                #@payment.BookingId
                                            </a>
                                        </td>
                                        <td>@(payment.Booking?.User?.FullName ?? "N/A")</td>
                                        <td>
                                            <strong class="text-success">@payment.Amount?.ToString("N0") ₫</strong>
                                        </td>
                                        <td>
                                            @if (payment.PaymentMethod == "Credit Card")
                                            {
                                                <span class="badge badge-primary">
                                                    <i class="fas fa-credit-card"></i> Thẻ tín dụng
                                                </span>
                                            }
                                            else if (payment.PaymentMethod == "Cash")
                                            {
                                                <span class="badge badge-success">
                                                    <i class="fas fa-money-bill"></i> Tiền mặt
                                                </span>
                                            }
                                            else if (payment.PaymentMethod == "Bank Transfer")
                                            {
                                                <span class="badge badge-info">
                                                    <i class="fas fa-university"></i> Chuyển khoản
                                                </span>
                                            }
                                            else if (payment.PaymentMethod == "E-wallet")
                                            {
                                                <span class="badge badge-warning">
                                                    <i class="fas fa-wallet"></i> Ví điện tử
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">@payment.PaymentMethod</span>
                                            }
                                        </td>
                                        <td><code>@payment.TransactionCode</code></td>
                                        <td>@payment.PaidAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@payment.PaymentId" class="btn btn-info btn-sm" title="Chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@payment.PaymentId" class="btn btn-warning btn-sm" title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@payment.PaymentId" class="btn btn-danger btn-sm" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        <i class="fas fa-receipt fa-3x mb-3"></i>
                                        <p>Chưa có thanh toán nào</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>