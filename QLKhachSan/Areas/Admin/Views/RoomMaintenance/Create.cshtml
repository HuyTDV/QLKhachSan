@model QLKhachSan.Models.RoomMaintenance

@{
    ViewData["Title"] = "Thêm bảo trì mới";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm yêu cầu bảo trì mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Bảo trì</a></li>
                    <li class="breadcrumb-item active">Tạo mới</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin bảo trì</h3>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="form-group">
                                <label asp-for="RoomId" class="control-label">Phòng <span class="text-danger">*</span></label>
                                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                                    <option value="">-- Chọn phòng cần bảo trì --</option>
                                </select>
                                <span asp-validation-for="RoomId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Mô tả vấn đề <span class="text-danger">*</span></label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả chi tiết vấn đề cần bảo trì..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="StaffId" class="control-label">Nhân viên phụ trách</label>
                                <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId">
                                    <option value="">-- Chọn nhân viên (tùy chọn) --</option>
                                </select>
                                <small class="form-text text-muted">Để trống nếu chưa phân công</small>
                                <span asp-validation-for="StaffId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status" class="control-label">Trạng thái <span class="text-danger">*</span></label>
                                <select asp-for="Status" class="form-control">
                                    <option value="Pending">Chờ xử lý</option>
                                    <option value="In Progress">Đang thực hiện</option>
                                    <option value="Completed">Hoàn thành</option>
                                    <option value="Cancelled">Đã hủy</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="alert alert-info">
                                <i class="icon fas fa-info-circle"></i>
                                <strong>Lưu ý:</strong>
                                <ul class="mb-0">
                                    <li>Ngày bảo trì sẽ được tự động ghi nhận là thời điểm hiện tại</li>
                                    <li>Nếu chọn trạng thái "Đang thực hiện", phòng sẽ tự động chuyển sang trạng thái "Maintenance"</li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}