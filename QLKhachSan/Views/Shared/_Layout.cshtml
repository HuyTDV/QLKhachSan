            <span class="chip" onclick="sendQuick('Ăn gì ngon ở đây?')">🍜 Món ngon Nghệ An</span>
            <span class="chip" onclick="sendQuick('Tìm phòng dưới 1 triệu')">💰 Phòng rẻ</span>
        </div>

        <div class="chat-input-area">
            <input type="text" id="chat-input" placeholder="Nhập hoặc nói..." onkeypress="handleEnter(event)">
            <button class="btn-send btn-mic" id="btn-mic" onclick="startVoice()" title="Nói để chat">
                <i class="fas fa-microphone"></i>
            </button>
            <button class="btn-send btn-submit" onclick="sendMessage()">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <script>
        // 1. Voice Search Logic
        function startVoice() {
            var micBtn = document.getElementById('btn-mic');
            if (!('webkitSpeechRecognition' in window)) {
                alert("Trình duyệt không hỗ trợ. Hãy dùng Google Chrome."); return;
            }

            var recognition = new webkitSpeechRecognition();
            recognition.lang = 'vi-VN'; // Tiếng Việt
            recognition.interimResults = false;

            recognition.onstart = function() {
                micBtn.classList.add('listening'); // Đổi màu đỏ
                micBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                document.getElementById('chat-input').placeholder = "Đang nghe...";
            };

            recognition.onresult = function(event) {
                var text = event.results[0][0].transcript;
                document.getElementById('chat-input').value = text;
                setTimeout(sendMessage, 500); // Tự gửi sau 0.5s
            };

            recognition.onend = function() {
                micBtn.classList.remove('listening'); // Về màu xanh
                micBtn.innerHTML = '<i class="fas fa-microphone"></i>';
                document.getElementById('chat-input').placeholder = "Nhập hoặc nói...";
            };

            recognition.start();
        }

        // 2. Chat Logic (Giữ nguyên)
        function toggleChat() {
            var box = document.getElementById('chat-box');
            box.style.display = (box.style.display === 'none' || box.style.display === '') ? 'flex' : 'none';
            if(box.style.display === 'flex') document.getElementById('chat-input').focus();
        }
        function toggleMaximize() {
            var box = document.getElementById('chat-box');
            box.classList.toggle('maximized');
            document.getElementById('icon-max').className = box.classList.contains('maximized') ? 'fas fa-compress' : 'fas fa-expand';
        }
        function handleEnter(e) { if (e.key === 'Enter') sendMessage(); }
        function sendQuick(txt) { document.getElementById('chat-input').value = txt; sendMessage(); }

        function appendMessage(html, sender) {
            var div = document.createElement('div');
            div.className = `chat-msg ${sender}`;
            div.innerHTML = html;
            document.getElementById('chat-content').appendChild(div);
            document.getElementById('chat-content').scrollTop = 9999;
        }

        function showTyping() {
            var id = 'typing-' + Date.now();
            appendMessage(`<div id="${id}" class="typing-indicator"><div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div></div>`, 'bot');
            return id;
        }

        async function sendMessage() {
            var input = document.getElementById('chat-input');
            var msg = input.value.trim();
            if (!msg) return;

            appendMessage(msg, 'user');
            input.value = '';
            var typeId = showTyping();

            try {
                const res = await fetch('/Chat/SendMessage', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(msg)
                });
                document.getElementById(typeId).remove();
                if (res.ok) {
                    const data = await res.json();
                    appendMessage(data.reply, 'bot');
                } else appendMessage('Lỗi kết nối.', 'bot');
            } catch (e) {
                document.getElementById(typeId)?.remove();
                appendMessage('Lỗi: ' + e.message, 'bot');
            }
        }
    </script>

