                animation-delay: -0.16s;
            }

        @@keyframes typing {
            0%, 80%, 100% {
                transform: scale(0);
            }

            40% {
                transform: scale(1);
            }
        }
    </style>

    <div id="chat-circle" onclick="toggleChat()"><i class="fas fa-comment-dots fa-2x"></i></div>

