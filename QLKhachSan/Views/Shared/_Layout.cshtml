    <div id="chat-circle" onclick="toggleChat()">
        <i class="fas fa-comment-dots fa-2x"></i>
    </div>

    <div id="chat-box">
        <div class="chat-header">
            <span>Grandora Support AI</span>
            <div>
                <button onclick="toggleMaximize()" style="background:none; border:none; color:white; cursor:pointer; margin-right: 10px;" title="Phóng to">
                    <i id="icon-max" class="fas fa-expand"></i>
                </button>
                <button onclick="toggleChat()" style="background:none; border:none; color:white; cursor:pointer;" title="Đóng">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="chat-content" id="chat-content">
            <div class="chat-msg bot">
                Xin chào! Tôi là trợ lý ảo Grandora. Tôi có thể giúp bạn tìm phòng, tra cứu giá hoặc dịch vụ khách sạn.
            </div>
        </div>
        <div class="chat-input-area">
            <input type="text" id="chat-input" class="form-control" placeholder="Nhập câu hỏi..." onkeypress="handleEnter(event)">
            <button class="btn btn-primary" onclick="sendMessage()">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <script>
        // Hàm bật/tắt khung chat
        function toggleChat() {
            var chatBox = document.getElementById('chat-box');
            if (chatBox.style.display === 'none' || chatBox.style.display === '') {
                chatBox.style.display = 'flex';
                document.getElementById('chat-input').focus();
            } else {
                chatBox.style.display = 'none';
            }
        }

        // Hàm Phóng to / Thu nhỏ (Mới thêm)
        function toggleMaximize() {
            var chatBox = document.getElementById('chat-box');
            var icon = document.getElementById('icon-max');

            // Bật tắt class 'maximized'
            chatBox.classList.toggle('maximized');

            // Đổi icon tương ứng
            if (chatBox.classList.contains('maximized')) {
                icon.classList.remove('fa-expand');
                icon.classList.add('fa-compress'); // Icon thu nhỏ
                document.getElementById('chat-input').focus();
            } else {
                icon.classList.remove('fa-compress');
                icon.classList.add('fa-expand'); // Icon phóng to
            }

            // Cuộn xuống cuối sau khi đổi kích thước
            setTimeout(scrollToBottom, 300);
        }

        // Xử lý phím Enter
        function handleEnter(e) {
            if (e.key === 'Enter') sendMessage();
        }

        // Gửi tin nhắn
        async function sendMessage() {
            var input = document.getElementById('chat-input');
            var content = document.getElementById('chat-content');
            var message = input.value.trim();

            if (!message) return;

            // 1. Hiện tin nhắn User
            appendMessage(message, 'user');
            input.value = '';

            // 2. Hiện "Đang trả lời..."
            var loadingId = 'loading-' + Date.now();
            var loadingHtml = `<div id="${loadingId}" class="chat-msg bot" style="font-style:italic; color:#888;">Bot đang nhập...</div>`;
            content.insertAdjacentHTML('beforeend', loadingHtml);
            scrollToBottom();

            try {
                // 3. Gọi API
                const response = await fetch('/Chat/SendMessage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(message)
                });

                // Xóa loading
                var loadingEl = document.getElementById(loadingId);
                if(loadingEl) loadingEl.remove();

                if (response.ok) {
                    const data = await response.json();
                    appendMessage(data.reply, 'bot');
                } else {
                    appendMessage('Lỗi kết nối server (Status: ' + response.status + ')', 'bot');
                }

            } catch (error) {
                var loadingEl = document.getElementById(loadingId);
                if(loadingEl) loadingEl.remove();
                appendMessage('Có lỗi xảy ra: ' + error.message, 'bot');
            }
        }

        // Hàm phụ trợ: Thêm tin nhắn vào khung
        function appendMessage(text, sender) {
            var content = document.getElementById('chat-content');
            var div = document.createElement('div');
            div.className = `chat-msg ${sender}`;

            // Dùng innerHTML để render thẻ HTML (cho Card phòng, ảnh, v.v...)
            div.innerHTML = text;

            content.appendChild(div);
            scrollToBottom();
        }

        function scrollToBottom() {
            var content = document.getElementById('chat-content');
            content.scrollTop = content.scrollHeight;
        }
    </script>

