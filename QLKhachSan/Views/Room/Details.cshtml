@model QLKhachSan.Models.Room

@{
    ViewData["Title"] = $"{Model.RoomType} - Room Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var avgRating = ViewBag.AverageRating ?? 0;
    var totalReviews = ViewBag.TotalReviews ?? 0;

    // --- XỬ LÝ ĐƯỜNG DẪN ẢNH (Giống trang Index) ---
    // 1. Nếu DB có tên file -> Ghép với thư mục /assets/img/hotel/
    // 2. Nếu null -> Lấy ảnh room-1.webp làm mặc định
    string imagePath = string.IsNullOrEmpty(Model.ImageUrl)
                       ? "/assets/img/hotel/room-1.webp"
                       : $"/assets/img/hotel/{Model.ImageUrl}";
}

<div class="room-details-page">
    <div class="container">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Room" asp-action="Index">Rooms</a></li>
                <li class="breadcrumb-item active">@Model.RoomType</li>
            </ol>
        </nav>

        <div class="room-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="room-badge @GetBadgeClass(Model.RoomType)">
                        @Model.RoomType
                    </div>
                    <h1 class="room-title">@Model.RoomType</h1>
                    <p class="room-subtitle">
                        <i class="fas fa-map-marker-alt"></i>
                        @(Model.HotelBranch?.BranchName ?? "Main Branch") - Room #@Model.RoomNumber
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="rating-box">
                        <div class="rating-stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= avgRating ? "text-warning" : "text-muted")"></i>
                            }
                        </div>
                        <p class="rating-text">@avgRating.ToString("0.0") out of 5 (@totalReviews reviews)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="room-gallery mb-5">
            <div class="main-image">
                <img src="@imagePath"
                     alt="@Model.RoomType"
                     class="img-fluid rounded-3"
                     style="width: 100%; height: 500px; object-fit: cover;">
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="info-section mb-4">
                    <h2 class="section-title">About This Room</h2>
                    <p class="room-description">
                        Experience luxury and comfort in our @Model.RoomType. Perfect for your stay,
                        this room offers modern amenities and a relaxing atmosphere.
                    </p>
                </div>

                <div class="info-section mb-4">
                    <h2 class="section-title">Room Features</h2>
                    <div class="features-grid">
                        @if (Model.Capacity.HasValue)
                        {
                            <div class="feature-card">
                                <i class="fas fa-users feature-icon"></i>
                                <div class="feature-info">
                                    <h4>Capacity</h4>
                                    <p>Up to @Model.Capacity guests</p>
                                </div>
                            </div>
                        }

                        <div class="feature-card">
                            <i class="fas fa-bed feature-icon"></i>
                            <div class="feature-info">
                                <h4>Room Type</h4>
                                <p>@Model.RoomType</p>
                            </div>
                        </div>

                        <div class="feature-card">
                            <i class="fas fa-check-circle feature-icon"></i>
                            <div class="feature-info">
                                <h4>Status</h4>
                                <p class="@(Model.Status == "Available" ? "text-success" : "text-danger")">
                                    @Model.Status
                                </p>
                            </div>
                        </div>

                        <div class="feature-card">
                            <i class="fas fa-dollar-sign feature-icon"></i>
                            <div class="feature-info">
                                <h4>Price</h4>
                                <p>$@Model.Price?.ToString("N0") / night</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Amenities))
                {
                    <div class="info-section mb-4">
                        <h2 class="section-title">Amenities</h2>
                        <div class="amenities-list">
                            @foreach (var amenity in Model.Amenities.Split(','))
                            {
                                <div class="amenity-item">
                                    <i class="fas fa-check-circle"></i>
                                    <span>@amenity.Trim()</span>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div class="info-section mb-4">
                        <h2 class="section-title">Guest Reviews (@totalReviews)</h2>
                        <div class="reviews-list">
                            @foreach (var review in Model.Reviews.Take(5))
                            {
                                <div class="review-card">
                                    <div class="review-header">
                                        <div class="reviewer-info">
                                            <div class="reviewer-avatar">
                                                @if (!string.IsNullOrEmpty(review.User?.Avatar))
                                                {
                                                    <img src="@review.User.Avatar" alt="@review.User.FullName">
                                                }
                                                else
                                                {
                                                    <i class="fas fa-user-circle"></i>
                                                }
                                            </div>
                                            <div>
                                                <h5>@(review.User?.FullName ?? "Anonymous")</h5>
                                                <p class="review-date">@review.CreatedAt?.ToString("MMM dd, yyyy")</p>
                                            </div>
                                        </div>
                                        <div class="review-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                            }
                                        </div>
                                    </div>
                                    <p class="review-comment">@review.Comment</p>
                                    @if (!string.IsNullOrEmpty(review.Reply))
                                    {
                                        <div class="hotel-reply">
                                            <strong>Hotel Response:</strong>
                                            <p>@review.Reply</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="booking-card sticky-top">
                    <div class="price-section">
                        <span class="price-label">Price per night</span>
                        <h2 class="price-amount">$@Model.Price?.ToString("N0")</h2>
                    </div>

                    <div class="booking-form">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <div class="status-badge @(Model.Status == "Available" ? "status-available" : "status-unavailable")">
                                <i class="fas @(Model.Status == "Available" ? "fa-check-circle" : "fa-times-circle")"></i>
                                @Model.Status
                            </div>
                        </div>

                        @if (Model.Status == "Available")
                        {
                            <a asp-action="Book" asp-route-id="@Model.RoomId" class="btn btn-book btn-lg w-100">
                                <i class="fas fa-calendar-check"></i> Book This Room
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-lg w-100" disabled>
                                <i class="fas fa-ban"></i> Not Available
                            </button>
                        }
                    </div>

                    <div class="booking-info mt-4">
                        <h5>Booking Information</h5>
                        <ul>
                            <li><i class="fas fa-clock"></i> Check-in: 2:00 PM</li>
                            <li><i class="fas fa-clock"></i> Check-out: 12:00 PM</li>
                            <li><i class="fas fa-ban-smoking"></i> Non-smoking</li>
                            <li><i class="fas fa-concierge-bell"></i> 24/7 Room Service</li>
                        </ul>
                    </div>

                    @if (Model.HotelBranch != null)
                    {
                        <div class="contact-info mt-4">
                            <h5>Contact</h5>
                            <p><i class="fas fa-phone"></i> @Model.HotelBranch.Phone</p>
                            <p><i class="fas fa-map-marker-alt"></i> @Model.HotelBranch.Address</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetBadgeClass(string roomType)
    {
        if (string.IsNullOrEmpty(roomType)) return "badge-default";

        if (roomType.Contains("Ocean")) return "badge-ocean";
        if (roomType.Contains("Business")) return "badge-business";
        if (roomType.Contains("Family")) return "badge-family";
        if (roomType.Contains("Romantic")) return "badge-romantic";
        if (roomType.Contains("City")) return "badge-city";
        if (roomType.Contains("Premium")) return "badge-premium";
        if (roomType.Contains("Suite")) return "badge-premium";

        return "badge-default";
    }
}

