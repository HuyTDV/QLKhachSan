@model QLKhachSan.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        font-family: 'Segoe UI', sans-serif;
    }

    .auth-box {
        background: #ffffff;
        padding: 35px 40px;
        width: 420px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .auth-box h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #2c5364;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 10px 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        outline: none;
        transition: border-color 0.3s;
    }

    .form-group input:focus {
        border-color: #2c5364;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        background: #2c5364;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s;
    }

    .btn-submit:hover {
        background: #203a43;
    }

    .auth-footer {
        text-align: center;
        margin-top: 15px;
    }

    .auth-footer a {
        color: #2c5364;
        text-decoration: none;
        font-weight: 600;
    }

    .auth-footer a:hover {
        text-decoration: underline;
    }

    .validation-summary-errors {
        color: red;
        margin-bottom: 10px;
    }
</style>

<div class="auth-container">
    <div class="auth-box">
        <h2>Đăng ký tài khoản</h2>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="validation-summary-errors"></div>

            <div class="form-group">
                <label>Họ tên</label>
                <input asp-for="FullName" placeholder="Nhập họ tên" />
            </div>

            <div class="form-group">
                <label>Tên đăng nhập</label>
                <input asp-for="Username" placeholder="Tên đăng nhập" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" placeholder="Email" />
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                <input asp-for="Password" type="password" placeholder="Mật khẩu" />
            </div>

            <div class="form-group">
                <label>Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu" />
            </div>

            <button type="submit" class="btn-submit">Đăng ký</button>
        </form>

        <div class="auth-footer">
            <p>Đã có tài khoản?
                <a asp-action="Login">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>
